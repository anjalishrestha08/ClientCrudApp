@model ClientCrudApp.Models.Client
@{
    ViewData["Title"] = "Delete Client";
}
<div class="container py-2 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <!--Header-->
                <div class="card-header text-white" style="background:linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                    <h4 class="mb-0">Delete Client: @Model.Name ?</h4>
                </div>
                <!--Body-->
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this client?</h5>
                    <dl class="row g-3">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.FullPhone</dd>
                        <dt class="col-sm-4">Nationality</dt>
                        <dd class="col-sm-8">@Model.Nationality</dd>
                    </dl>

                    <!--Form: Delete Confirm-->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mt-4 text-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


