@model List<ClientCrudApp.Models.Client>
@{
    ViewData["Title"] = "Clients";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Clients</h2>
        <a asp-action="Create" class="btn btn-primary"> + Create New Client</a>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Nationality</th>
                    <th>DOB</th>
                    <th>Education</th>
                    <th>Preferred Contact</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.Id</td>
                        <td>@client.Name</td>
                        <td>@client.Gender</td>
                        <td>@client.FullPhone</td>
                        <td>@client.Email</td>
                        <td>@client.Address</td>
                        <td>@client.Nationality</td>
                        <td>@client.DateOfBirth.ToString("yyyy-MM-dd")</td>
                        <td>@(string.IsNullOrEmpty(client.EducationBackground) ? "N/A" : client.EducationBackground)</td>
                        <td>@client.PreferredModeOfContact</td>
                        <td>
                                <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-info btn-sm me-1" style="background-color:lightskyblue" title="View Details">Details</a>
                                <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm me-1" style="background-color:rebeccapurple; color:white;">Edit</a>
                            <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-danger btn-sm mt-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No Clients found.
        </div>
    }
</div>
