@model IEnumerable<ClientCrudApp.Models.Client>

@{
    ViewData["Title"] = "Clients List";
}

<div class="container py-2 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0">
                <!-- Header -->
                <div class="card-header text-white"
                     style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Clients</h4>
                        <a asp-action="Create" class="btn btn-light btn-sm">+ Add New Client</a>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Education</th>
                                        <th>Preferred Contact</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var client in Model)
                                    {
                                        <tr>
                                            <td>@client.Id</td>
                                            <td>@client.Name</td>
                                            <td>@client.Gender</td>
                                            <td>@client.Email</td>
                                            <td>@client.FullPhone</td>
                                            <td>@client.EducationBackground</td>
                                            <td>@client.PreferredModeOfContact</td>
                                            <td class="text-end ">
                                                <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-sm btn-info text-white mt-1">Details</a>
                                                <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm text-white mt-1" 
                                                style="background-color:rebeccapurple;">Edit</a>
                                                <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-sm btn-danger mt-1">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">

                                <!-- Previous -->
                                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@(ViewBag.CurrentPage - 1)">
                                        Previous
                                    </a>
                                </li>

                                <!-- Page Numbers -->
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i" aria-label="Page @i">@i</a>
                                    </li>
                                }

                                <!-- Next -->
                                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@(ViewBag.CurrentPage + 1)">
                                        Next
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            No clients found. <a asp-action="Create" class="alert-link">Add one now</a>.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
